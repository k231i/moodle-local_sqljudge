<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/assign/feedback/sqljudge/db" VERSION="20220715" COMMENT="XMLDB file for Moodle mod/assign/feedback/sqljudge"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="assignment_sqlj" COMMENT="SQL Judge assignment">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="assignment" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="dbms" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Assignment database management system"/>
        <FIELD NAME="ramlimit" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="RAM limit"/>
        <FIELD NAME="timelimit" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Time limit in seconds"/>
        <FIELD NAME="createdbscript" TYPE="binary" NOTNULL="true" SEQUENCE="false" COMMENT="SQL script of database creation"/>
        <FIELD NAME="checkscript" TYPE="binary" NOTNULL="true" SEQUENCE="false" COMMENT="SQL script to check whether the task is done correctly"/>
        <FIELD NAME="correctanswer" TYPE="binary" NOTNULL="true" SEQUENCE="false" COMMENT="Correct answer to the task"/>
        <FIELD NAME="correctoutput" TYPE="binary" NOTNULL="false" SEQUENCE="false" COMMENT="Correct output generated from correct answer + check script"/>
        <FIELD NAME="mustcontain" TYPE="binary" NOTNULL="false" SEQUENCE="false" COMMENT="Keywords that the answer must (not) contain"/>
        <FIELD NAME="hint" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Hint to the students whose answer is incorrect"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="assignment" TYPE="foreign" FIELDS="assignment" REFTABLE="assignment" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="assignment_sqlj_submission" COMMENT="SQL Judge submission">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="submission" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="status" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Judge status"/>
        <FIELD NAME="input" TYPE="binary" NOTNULL="true" SEQUENCE="false" COMMENT="Answer SQL script"/>
        <FIELD NAME="output" TYPE="binary" NOTNULL="false" SEQUENCE="false" COMMENT="DBMS output"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="submission" TYPE="foreign" FIELDS="submission" REFTABLE="submission" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
